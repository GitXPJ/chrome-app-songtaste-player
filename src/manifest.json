{
    "manifest_version": 2,
    "name": "SongTaste Player",
    "version": "1.0",
    "author": "5L丶",
    "short_name": "ST Player",
    "description": "SongTaste音乐播放插件",
    "icons": {
        "16": "res/img/icon.png",
        "48": "res/img/icon.png",
        "128": "res/img/icon.png"
    },
    // "sandbox": {
    //     "pages": ["res/index.html"]
    // },
    "permissions": [
        "contextMenus", {
            "fileSystem": ["write", "retainEntries", "directory"]
        },
        "https://songtaste.chinacloudsites.cn/*",
        "http://*.songtaste.com/*"
    ],
    "app": {
        "background": {
            "scripts": [
                "src/app.js"
            ]
        }
    }
}